@model ToDoApp.Models.TaskCreateViewModel

<h1>Create New Task</h1>

<form asp-action="Create" asp-controller="ToDo" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label asp-for="Task.Title"></label>
        <input asp-for="Task.Title" class="form-control" />
        <span asp-validation-for="Task.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Task.Description"></label>
        <input asp-for="Task.Description" class="form-control" />
        <span asp-validation-for="Task.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Task.DueDate"></label>
        <input asp-for="Task.DueDate" class="form-control" type="date" />
        <span asp-validation-for="Task.DueDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Task.Priority"></label>
        <select asp-for="Task.Priority" class="form-control">
            <option value="">Select Priority</option>
            <option value="High" selected="@(Model.Task.Priority == "High")">High</option>
            <option value="Medium" selected="@(Model.Task.Priority == "Medium")">Medium</option>
            <option value="Low" selected="@(Model.Task.Priority == "Low")">Low</option>
        </select>
        <span asp-validation-for="Task.Priority" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Task.Category"></label>
        <select asp-for="Task.Category" class="form-control">
            <option value="">Select Category</option>
            <option value="Work" selected="@(Model.Task.Category == "Work")">Work</option>
            <option value="Personal" selected="@(Model.Task.Category == "Personal")">Personal</option>
            <option value="Shopping" selected="@(Model.Task.Category == "Shopping")">Shopping</option>
            <option value="Other" selected="@(Model.Task.Category == "Other")">Other</option>
        </select>
        <span asp-validation-for="Task.Category" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Task.Status"></label>
        <select asp-for="Task.Status" class="form-control" asp-items="@(new SelectList(Model.StatusList, "Name", "Name"))">
            <option value="">Select Status</option>
        </select>
        <span asp-validation-for="Task.Status" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="Task.IsCompleted" value="false" />
    <button type="submit" class="btn btn-primary">Create Task</button>
</form>

<a asp-controller="Home" asp-action="Dashboard">Back to List</a>
