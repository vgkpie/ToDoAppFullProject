@model IEnumerable<ToDoApp.Models.Task>

@{
    ViewData["Title"] = "Dashboard";
}

<h2>Dashboard</h2>

<div class="task-section">
    <h3>To Do</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Due Date</th>
                <th>Category</th>
                <th>Status</th>
                <th>Priority</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in Model.Where(t => t.Status == "To Do"))
            {
                <tr>
                    <td>@task.Title</td>
                    <td>
                        <p>
                            <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTask-@task.Id" aria-expanded="false" aria-controls="collapseTask-@task.Id">
                                Show
                            </button>
                        </p>
                        <div class="collapse" id="collapseTask-@task.Id">
                            <div class="card card-body">
                                @task.Description
                            </div>
                        </div>
                    </td>
                    <td>@task.DueDate.ToShortDateString()</td>
                    <td>@task.Category</td>
                    <td>@task.Status</td>
                    <td>@task.Priority</td>
                    <td>
                        <a asp-controller="ToDo" asp-action="Edit" asp-route-id="@task.Id">Edit</a>
                        <a asp-controller="ToDo" asp-action="Delete" asp-route-id="@task.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

